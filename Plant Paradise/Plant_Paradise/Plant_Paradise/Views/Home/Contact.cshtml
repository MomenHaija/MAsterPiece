@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/UserLayout12.cshtml";

}
<div class="contact-from-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="form-title">
                    <h2>Have you any question?</h2>
                    <p>
                        Do you have any questions? Contact us and we'll be happy to help!



                    </p>
                </div>
                <div id="form_status"></div>
                <div class="contact-form">
                    <form method="POST" id="fruitkha-contact" action="https://formsubmit.co/haijamomen4@gmail.com" onSubmit="return valid_datas( this );">

                        @if (User.Identity.IsAuthenticated)
                        {
                            Plant_Paradise.Models.PlantsEntities db = new Plant_Paradise.Models.PlantsEntities();
                            string userid = (ViewBag.userid).ToString();
                            var user = db.AspNetUsers.Where(p => p.Id == userid).FirstOrDefault();

                            <p>
                                <input type="text" placeholder="Name" name="name" id="name" value="@user.Full_Name">
                                <input type="email" placeholder="Email" name="email" id="email" value="@user.Email">
                            </p>
                            <p>
                                <input type="tel" placeholder="Phone" name="phone" id="phone" value="@user.PhoneNumber">
                                <input type="text" placeholder="Subject" name="subject" id="subject">
                            </p>
                        }
                        else
                        {

                            <p>
                                <input type="text" placeholder="Name" name="name" id="name" />
                                <input type="email" placeholder="Email" name="email" id="email">
                            </p>
                            <p>
                                <input type="tel" placeholder="Phone" name="phone" id="phone" >
                                <input type="text" placeholder="Subject" name="subject" id="subject">
                            </p>
                        }

                        <p><textarea name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea></p>
                        <input type="hidden" name="token" />
                        <p><input type="submit" value="Submit"></p>

                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form-wrap">
                    <div class="contact-form-box">
                        <h4><i class="fas fa-map"></i> Shop Address</h4>
                        <p>Jordan <br> Irbid <br> Sharqi District</p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="far fa-clock"></i> Shop Hours</h4>
                        <p>SUN - Thurs: 8 to 9 PM <br> SAT - Fri: 10 to 8 PM </p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="fas fa-address-book"></i> Contact</h4>
                        <p>Phone: 077 7809 7732 <br> Email: Plant Paradise@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>