@{
    Plant_Paradise.Models.PlantsEntities plants = new Plant_Paradise.Models.PlantsEntities();
    var feeback = plants.Feedbacks.ToList();
}
<!-- end team section -->
<!-- testimonail-section -->
<div class="testimonail-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1 text-center">
                <div class="testimonial-sliders">
                    @foreach (var item in feeback)
                    {

                        if (item.IsAccepted == 1)
                        {
                            <div class="single-testimonial-slider">

                                <div class="client-avater">
                                </div>
                                <div class="client-meta">

                                    <h3>@item.AspNetUser.Full_Name </h3>
                                    <p class="testimonial-body">
                                        @item.Feedback_text
                                    </p>
                                    <div class="last-icon">
                                        <i class="fas fa-quote-right"></i>
                                    </div>

                                </div>

                            </div>
                        }
                    }
                    <div class="single-testimonial-slider">
                        <div class="single-testimonial-slider">
                            <div class="client-avater">
                            </div>
                            <div class="client-meta">
                                <h3>Feebacks From Users</h3>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <a href="\Feedbacks\Index" class="boxed-btn mt-4">Add Comment</a>

    </div>
</div>
