@model IEnumerable<Plant_Paradise.Models.Order_Details>

@{
    ViewBag.Title = "ProductsinOrders1";
    Layout = "~/Views/Shared/UserLayout12.cshtml";
}



<style>
    .list-group-item.active {
        background-color: #F28123 !important;
        border-color: #F28123 !important;
    }

    .search {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
    }

    .serchbutton {
        display: flex;
        justify-content: baseline;
        align-items: center;
    }
</style>

<div class="contact-from-section mt-150 mb-150">

    <section class="ftco-section contact-section">
        <h3 style="text-align: center;margin-bottom: 1%;">My Profile</h3>
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-5 col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">My Profile</h5>
                        </div>

                        <div class="list-group list-group-flush" role="tablist">


                            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account" role="tab">
                                My Orders
                            </a>

                            <p style="text-align:center;font-size:1.25rem;font-weight:700;">
                                <a href="\UserProfile\Index" >
                                    << Back
                                </a>
                            </p>
                          

                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-xl-8">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="account" role="tabpanel">



                            <div class="card">
                                <div class="card-header">
                                    <div class="card-actions float-right">

                                    </div>
                                    <div class="card-title mb-0">Products</div>
                                </div>
                                    <div class="card">
                                        <div class="card mb-12 ">
                                            <div class="table-responsive table-billing-history">
                                                <table class="table mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th class="border-gray-200" scope="col">Product Name</th>
                                                            <th class="border-gray-200" scope="col">Product Price</th>
                                                            <th class="border-gray-200" scope="col">Number of  Item</th>
                                                            <th class="border-gray-200" scope="col">Total Price</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>@item.Product.Product_Name</td>

                                                                <td>@item.Product.Product_Price JD</td>
                                                                <td>
                                                                    @item.Quantity
                                                                </td>
                                                                <td>
                                                                    @{
                                                                        var price = item.Product.Product_Price;
                                                                        var Quantity = item.Quantity;
                                                                        var TotalPericeofItem = price * Quantity;
                                                                    }

                                                                    @TotalPericeofItem
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
</section>
</div>
