                            </td>
                            <td>@item.Total_price JD</td>

                            <td>
                                <a class="btn btn-success" href="\UserProfile\ProductsinOrders\@item.Order_id" style="color: white;">View Products</a>
                            </td>
                        </tr>
                        }

