                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Order_id</td>
                            <td>@{
                               var order_date= Convert.ToDateTime(item.Order_date).Date.ToString("yyyy-MM-dd");
                               }
