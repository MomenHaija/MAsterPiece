@model IEnumerable<Plant_Paradise.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLAyout.cshtml";
}

<div class="page-header">
    <h1>Products</h1>
    <small>Home / Products</small>
</div>

<div class="page-content">

    <div class="records table-responsive">

        <div class="record-header">
            <div class="add">

                <p>
                    @Html.ActionLink("Create New", "Create", null, new {@class="btn btn-primary"})
                </p>
            </div>

            <div class="">
                <input type="search" placeholder="Search" style="margin:0;height: 33px !important;">
                <input type="submit" width="10px" style="margin:0;" value="search" class="btn btn-info">
            </div>
        </div>
        <div>
            <table width="100%">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Size)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product_Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sub_Categories.SubCategory_Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product_Name)
                            </td>
                            <td>
                                <img src="~/Images/@item.Product_Image" style="width:60px;height:60px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product_Size)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Product_Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td class="description" >
                                @Html.DisplayFor(modelItem => item.Product_Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sub_Categories.SubCategory_Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Product_id }, new { @class="btn btn-success" }) 
                                @Html.ActionLink("Details", "Details", new { id = item.Product_id }, new {@class="btn btn-info"}) 
                                @Html.ActionLink("Delete", "Delete", new { id = item.Product_id }, new {@class="btn btn-danger"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
