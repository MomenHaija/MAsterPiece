@model IEnumerable<Plant_Paradise.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserLayout12.cshtml";
}

<!-- products -->
<div class=" mt-150 mb-150">

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-10 blog-content">
                    <div class="pt-5">
                        <ul class="comment-list">
                            @foreach (var item in Model)
                            {


                                <li class="comment">
                                    <div class="comment">
                                        @{

                                            if (item.IsAccepted == 1)
                                            {
                                                <h4 style="color: green;">accepted</h4>
                                            }
                                            else if (item.IsAccepted == 2)
                                            {
                                                <h4 style="color: red;">Rejected</h4>

                                            }
                                            else
                                            {
                                                <h4 style="color: black;">Pending</h4>

                                            }
                                        }
                                        <h6>@item.Feedback_text</h6>
                                    </div>
                                    <hr />
                                </li>

                            }
                            </ul>

                        <!-- END comment-list -->

                        <div class="comment-form-wrap ">
                           @using (Html.BeginForm("Addfeeback", "Feedbacks"))
                           {
                                <div class="form-group">
                                    <label for="message" style="font-size:1.5rem">Message</label>
                                    <textarea name="Feedback_text" id="message" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Post feedback" class="btn btn-primary btn-md text-white">
                                </div>

                           }
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>