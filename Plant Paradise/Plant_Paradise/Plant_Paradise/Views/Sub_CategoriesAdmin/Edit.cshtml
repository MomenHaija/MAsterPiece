@model Plant_Paradise.Models.Sub_Categories

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLAyout.cshtml";
}

<br />
<br />
<br />
@using (Html.BeginForm("Edit", "Sub_CategoriesAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="edit-product-form">
        <h2>Edit Subcategory</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubCategory_id)

        @Html.LabelFor(model => model.Category_id, "Category_id", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("Category_id", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Category_id, "", new { @class = "text-danger" })
        <br />

        @Html.LabelFor(model => model.SubCategoryImage, htmlAttributes: new { @class = "control-label col-md-2" })
        <input class="form-control text-box single-line" id="SubCategoryImage" name="SubCategoryImage" type="file" value="@Model.SubCategoryImage" />
        @Html.ValidationMessageFor(model => model.SubCategoryImage, "", new { @class = "text-danger" })

        <br />
        @Html.LabelFor(model => model.SubCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })


        @Html.LabelFor(model => model.SubCategory_Description, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.SubCategory_Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SubCategory_Description, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", "CategoriesAdmin", null, new { @class = "btn btn-primary" })

            </div>
        </div>
    </div>
}


